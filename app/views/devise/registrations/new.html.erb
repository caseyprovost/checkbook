<div>
  <div>
    <h1 class="text-center mb-5 text-6xl text-teal-500 font-extrabold">Checkbook</h1>
    <h2 class="mt-6 text-center text-2xl font-semibold text-gray-300">
      Sign in to your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-300">
      Or
      <%= link_to "Log into your account", root_path, class: "font-medium text-pink-400 hover:text-pink-500" %>
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-teal-900 py-8 px-4 shadow sm:rounded-lg sm:px-10 shadow">
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), class: "" do |f| %>
        <div class="rounded-md shadow-sm">
          <%= render(RegistrationInputComponent.new(form: f, field: :email, label: "Email")) %>
          <%= render(RegistrationInputComponent.new(form: f, field: :username, label: "Username")) %>
          <%= render(RegistrationInputComponent.new(form: f, field: :name, label: "Your Name")) %>
          <%= render(RegistrationInputComponent.new(form: f, field: :password, label: "Password")) %>
          <%= render(RegistrationInputComponent.new(form: f, field: :password_confirmation, label: "Confirm your password")) %>
          <div class="mt-4">
            <%= f.submit "Sign In", class: "w-full flex justify-center py-2 px-4 border border-teal-900 rounded-md shadow-sm text-sm font-medium text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500 hover:pointer" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

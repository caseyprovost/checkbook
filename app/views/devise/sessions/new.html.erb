<div>
  <div>
    <h1 class="text-center mb-5 text-6xl text-teal-500 font-extrabold">Checkbook</h1>
    <h2 class="mt-6 text-center text-2xl font-semibold text-gray-400">
      Sign in to your account
    </h2>
    <p class="mt-2 text-center text-sm text-gray-400">
      Or
      <%= link_to "start your 14-day free trial", new_registration_path(resource_name), class: "font-medium text-pink-400 hover:text-pink-500" %>
    </p>
  </div>

  <%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: "mt-8 space-y-6" do |f| %>
    <div class="rounded-md shadow-sm -space-y-px">
      <div>
        <%= f.label :username, class: "sr-only" %>
        <%= f.text_field :username, autofocus: true, placeholder: "username", autocomplete: "username", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-teal-600 placeholder-gray-500 text-gray-300 rounded-t-md focus:outline-none focus:ring-teal-500 focus:border-teal-500 focus:z-10 sm:text-sm bg-gray-800" %>
      </div>
      <div>
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-teal-600 placeholder-gray-500 text-gray-300 rounded-b-md focus:outline-none focus:ring-teal-500 focus:border-teal-500 focus:z-10 sm:text-sm bg-gray-800" %>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-teal-600 focus:ring-teal-500 border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-400" %>
      </div>

      <div class="text-sm">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-pink-400 hover:text-pink-500" %>
      </div>
    </div>

    <div>
      <%= f.button class: "group relative w-full flex justify-center py-2 px-4 border border-gray-900 text-sm font-medium rounded-md text-teal-100 bg-teal-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-600 hover:pointer" do %>
        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
          <!-- Heroicon name: solid/lock-closed -->
          <svg class="h-5 w-5 text-teal-100 group-hover:text-teal-200" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
        </span>
        Sign in
      <% end %>
    </div>
  <% end %>
</div>
